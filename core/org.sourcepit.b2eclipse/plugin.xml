<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            class="org.sourcepit.b2eclipse.ui.B2Wizard"
            icon="icons/b2.gif"
            id="org.sourcepit.b2eclipse.ImportWizard"
            name="b2 Project/s Checkout">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.sourcepit.b2eclipse.core.commands.category"
            id="org.sourcepit.b2eclipse.core.commands.setupRuntime"
            name="Setup B2 Runtime">
      </command>
      <category
            id="org.sourcepit.b2eclipse.core.commands.category"
            name="B2">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sourcepit.b2eclipse.ui.runtime.SetupRuntimeHandler"
            commandId="org.sourcepit.b2eclipse.core.commands.setupRuntime">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               icon="icons/b2.gif"
               id="org.sourcepit.b2eclipse.ui.popups"
               label="B2">
            <command
                  commandId="org.sourcepit.b2eclipse.core.commands.setupRuntime"
                  id="org.sourcepit.b2eclipse.popups.setupRuntimeCommand"
                  label="Setup B2 Runtime">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.sourcepit.b2eclipse.ui.debug.LaunchShortcut1"
            icon="icons/b2.gif"
            id="org.sourcepit.b2eclipse.shortcut1"
            label="Localize Target Platform"
            modes="run, debug, profile">
         <contextualLaunch>
            <enablement>
               <count
                     value="1">
               </count>
               <iterate>
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                  </adapt></iterate>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.sourcepit.b2eclipse.core.B2Nature.category"
            name="B2 Project Nature commands">
      </category>
      <command
            categoryId="org.sourcepit.b2eclipse.core.B2Nature.category"
            defaultHandler="org.sourcepit.b2eclipse.ui.AddRemoveB2NatureHandler"
            id="org.sourcepit.b2eclipse.core.addRemoveB2Nature"
            name="Add/RemoveB2 Project Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.sourcepit.b2eclipse.core.addRemoveB2Nature"
               label="Disable Sample builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <and>
                        <instanceof
                              value="org.eclipse.core.resources.IProject">
                        </instanceof>
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.sourcepit.b2eclipse.core.B2Nature">
                        </test>
                     </and>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.sourcepit.b2eclipse.core.addRemoveB2Nature"
               label="Enable B2 builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <and>
                        <instanceof
                              value="org.eclipse.core.resources.IProject">
                        </instanceof>
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.sourcepit.b2eclipse.core.B2Nature">
                           </test>
                        </not>
                     </and>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
