<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            class="org.sourcepit.b2eclipse.ui.B2Wizard"
            icon="src/org/sourcepit/b2eclipse/ui/b2.gif"
            id="ImportWizard"
            name="Check out b2 Project/s...">
      </wizard>
   </extension>
   <extension
            point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.sourcepit.b2eclipse.SVNcheckout"
            objectClass="org.eclipse.team.svn.ui.repository.model.RepositoryFolder">
         <action
                  class="org.sourcepit.b2eclipse.checkout.B2SVNCheckout"
                  menubarPath="checkoutGroup"
                  id="SVNcheckoutAction"
                  icon="src/org/sourcepit/b2eclipse/ui/b2.gif"
               label="Check out b2 Project/s...">
         </action>         
      </objectContribution>
            </extension>
            <extension point="org.eclipse.ui.commands">
        <command
        	name="B2Git"
            defaultHandler="org.sourcepit.b2eclipse.checkout.B2GitCheckout"
            id="org.sourcepit.b2eclipse.ui.B2Git">
      </command>
</extension>
             <extension
         point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:org.eclipse.egit.ui.RepositoriesView">
        <command
               commandId="org.sourcepit.b2eclipse.ui.B2Git"
               icon="src/org/sourcepit/b2eclipse/ui/b2.gif"
               label="Check out b2 Project/s..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <instanceof
                              value="org.eclipse.egit.ui.internal.repository.tree.WorkingDirNode">
                        </instanceof>
                        <instanceof
                              value="org.eclipse.egit.ui.internal.repository.tree.FolderNode">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
         </menuContribution>
         </extension>
         <extension point="org.eclipse.ui.bindings">
<key
  sequence="C"
  commandId="org.sourcepit.b2eclipse.ui.B2Git"
  schemeId="org.eclipse.ui.defaultAcceleratorConfiguration" />
</extension>
</plugin>
